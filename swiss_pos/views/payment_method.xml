<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="pos_payment_method_inh" model="ir.ui.view">
            <field name="name">pos.payment.method.inh</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="require_card_no"/>
                </field>
            </field>
        </record>
        <record id="pos_payment_inh" model="ir.ui.view">
            <field name="name">pos.payment.inh</field>
            <field name="model">pos.payment</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
            <field name="arch" type="xml">
                <field name="session_id" position="after">
                    <field name="card_number"/>
                </field>
            </field>
        </record>
</odoo>

