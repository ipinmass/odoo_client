<?xml version="1.0" encoding="UTF-8"?>
<templates id="template1" xml:space="preserve">

    <t t-name="swiss_pos.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-if='receipt.company.logo']" position="replace">
             <t t-if="env.pos.config.receipt_logo">
                <img class="pos-receipt-logo" t-attf-src="data:image/*;base64,{{env.pos.config.receipt_logo}}" alt="Logo"/>
                <br/>
            </t>
            <t t-if="!env.pos.config.receipt_logo">
                <h2 class="pos-receipt-center-align">
                    <t t-esc="receipt.company.name" />
                </h2>
                <br/>
            </t>
        </xpath>
        <xpath expr="//t[@t-if='!receipt.company.logo']" position="replace"/>
        <xpath expr="//div[hasclass('pos-receipt')]/div[hasclass('pos-receipt-order-data')]" position="replace"/>
        <xpath expr="//div[hasclass('pos-receipt')]//div[hasclass('pos-receipt-contact')]" position="replace">
            <div class="pos-receipt-contact">
                <t t-if="receipt.header_html">
                    <t t-out="receipt.header_html" />
                </t>
                <t t-if="!receipt.header_html and receipt.header">
                    <div style="white-space:pre-line"><t t-esc="receipt.header" /></div>
                </t>
                <t t-if="receipt.cashier">
                    <div class="cashier">
                        <div>--------------------------------</div>
                        <div>Served by<t t-esc="receipt.cashier" /></div>
                    </div>
                </t>
            </div>
            <div class="pos-receipt-order-data">
                <div><t t-esc="receipt.name" /></div>
                <t t-if="receipt.date.localestring">
                    <div><t t-esc="receipt.date.localestring" /></div>
                </t>
                <t t-else="">
                    <div><t t-esc="receipt.date.validation_date" /></div>
                </t>
            </div>
        </div>
        <xpath expr="//div[hasclass('pos-receipt')]//div[hasclass('before-footer')]" position="before">
            <div>Total Item <span t-esc='receipt.QuantityInfo.producIids' class="pos-receipt-right-align"/> </div>
            <div>Total Quantity <span t-esc='receipt.QuantityInfo.qtys' class="pos-receipt-right-align"/></div>
        </xpath>
    </t>
    <t t-name="swiss_pos.PaymentScreenPaymentLines" t-inherit="point_of_sale.PaymentScreenPaymentLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='paymentline selected']//div[@class='payment-name']" position="after">
            <div class="payment-name cardinput" t-if="line.payment_method.require_card_no">
                <input
                    class="input-card-number"
                    type="number"
                    t-att-value="line.card_number"
                    id="input-card-number"
                    t-on-keyup="() => this.trigger('update-payment-card-no', { cid: line.cid })"
                    style="font-size: larger;">
                    </input>
            </div>
        </xpath>

        <xpath expr="//div[@class='paymentline']//div[@class='payment-name']" position="after">
            <div class="payment-name cardinfo" t-if="line.payment_method.require_card_no">
                <t t-esc="line.card_number" />
            </div>
        </xpath>
    </t>

</templates>
