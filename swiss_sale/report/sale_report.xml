<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="sale_report_discount_all" inherit_id="sale.report_saleorder_document">
    <xpath expr="//div[@id='informations']" position="replace">
        <div class="row mt-4 mb-4 " id="informations">
            <table class="table table-sm o_main_table table-borderless mt-4">
                <tr>
                    <td style="width: 15%; "><strong>Order Type</strong></td>
                    <td style="width: 3%">:</td>
                    <td class="pull-left" style="width: 32%">
                        <span t-field="doc.order_type"/>
                    </td>
                    <td rowspan="3" style="width:50%"><strong>Description :</strong> <br/> <span t-field="doc.description"/> </td>
                </tr>
                <tr>
                    <td style="width: 15%; font-weight: bold;" ><strong>Delivery Type</strong></td>
                    <td style="width: 3%"><strong>:</strong></td>
                    <td style="width: 32%"><span t-field="doc.delivery_type"/></td>
                </tr>
                <tr>
                    <td style="width: 15%; font-weight: bold;" ><strong>Printed Date</strong></td>
                    <td style="width: 3%"><strong>:</strong></td>
                    <td style="width: 32%"><span t-esc="doc.get_datetime_now()"/></td>
                </tr>
                <tr>
                    <td style="width: 15%; font-weight: bold;" >
                        <strong t-if="doc.state in ['draft', 'sent']">Quotation Date:</strong>
                        <strong t-else="">Order Date:</strong>
                    </td>
                    <td style="width: 3%"><strong>:</strong></td>
                    <td style="width: 32%">
                    <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </td>
                </tr>
                 <tr>
                    <td style="width: 15%; font-weight: bold;" ><strong>Nota No.</strong></td>
                    <td style="width: 3%"><strong>:</strong></td>
                    <td style="width: 32%"><span t-field="doc.nota_no" /></td>
                </tr>
                <tr>
                    <td style="width: 15%; font-weight: bold;" ><strong>Delivery Date</strong></td>
                    <td style="width: 3%"><strong>:</strong></td>
                    <td style="width: 32%"><span t-field="doc.commitment_date" /></td>
                </tr>
            </table>
        </div>
    </xpath>
</template>

</odoo>
