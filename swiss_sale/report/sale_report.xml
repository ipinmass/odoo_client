<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="sale_report_discount_all" inherit_id="sale.report_saleorder_document">
    <xpath expr="//div[@id='total']//t[@t-set='tax_totals']" position="before">
        <tr class="border-black o_total">
            <td><strong>Remaining Amount</strong></td>
            <td class="text-end">
                <span t-field="doc.amount_unpaid"/>
            </td>
        </tr>
    </xpath>
    <xpath expr="//div[@id='informations']" position="replace">
        <div class="row mt-4 mb-4 " id="informations">
            <table class="table table-sm o_main_table table-borderless mt-4">
                <tr>
                    <td style="width: 25%; "><strong>Order Type</strong></td>
                    <td style="width: 25%">
                        <span t-field="doc.order_type"/>
                    </td>
                    <td colspan="2" rowspan="2" ><strong>Description :</strong> <br/> <span t-field="doc.description"/> </td>
                </tr>
                <tr>
                    <td style="width: 25%;" ><strong>Delivery Type</strong></td>
                    <td style="width: 25%"><span t-field="doc.delivery_type"/></td>
                </tr>
            </table>
        </div>
    </xpath>
</template>

</odoo>
