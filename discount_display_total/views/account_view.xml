<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="account_move_view_custom" model="ir.ui.view">
            <field name="name">account.move.view.custom</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="tax_totals" position="before">
                    <field name="undiscounted_total" widget="monetary" readonly="1"/>
                    <field name="total_discount" widget="monetary" readonly="1"/>
                </field>
            </field>
        </record>

</odoo>
